<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Base -->
  <color name="black">#000000</color>
  <color name="white">#FFFFFF</color>
  <color name="color_error">#E53935</color> <!-- Stronger Red -->

  <!--
     STRICT 5-COLOR PALETTE (High Contrast Minimalist)
     To ensure "checks" (checkboxes) and "colors" look better:
     ACCENT MUST CONTRAST WITH BACKGROUND.
  -->

  <!-- Light Theme -->
  <color name="light_c1_background">#F5F7F9</color>   <!-- Very light cool grey (better than plain F5F5F5) -->
  <color name="light_c2_surface">#FFFFFF</color>      <!-- Pure White -->
  <color name="light_c3_accent">#111827</color>       <!-- Almost Black (High contrast for buttons/checks) -->
  <color name="light_c4_border">#E5E7EB</color>       <!-- Subtle Border -->
  <color name="light_c5_foreground">#111827</color>   <!-- Same as accent for text -->

  <!-- Dark Theme -->
  <color name="dark_c1_background">#1A1A1A</color>    <!-- Pure Black (OLED) -->
  <color name="dark_c2_surface">#1C1C1E</color>       <!-- Dark Grey Surface -->
  <color name="dark_c3_accent">#F5F7F9</color>        <!-- Pure White (High contrast for buttons/checks) -->
  <color name="dark_c4_border">#2C2C2E</color>        <!-- Dark Border -->
  <color name="dark_c5_foreground">#FFFFFF</color>    <!-- White Text -->

  <!-- MAPPINGS -->

  <!-- Light -->
  <color name="light_main_background">@color/light_c1_background</color>
  <color name="light_panel_background">@color/light_c2_surface</color>
  <color name="light_main_foreground">@color/light_c5_foreground</color>
  <color name="light_secondary_foreground">@color/light_c4_border</color> <!-- Secondary text/icons lighter -->
  <color name="light_main_border">@color/light_c4_border</color>

  <color name="light_task_background">@color/light_c2_surface</color>
  <color name="light_task_border">@color/light_c4_border</color>
  <color name="light_task_title">@color/light_c5_foreground</color>

  <color name="light_popup_background">@color/light_c2_surface</color>
  <color name="light_input_background">@color/light_c1_background</color>
  <color name="light_input_border">@color/light_c4_border</color>

  <color name="light_button_background">@color/light_c3_accent</color>
  <color name="light_button_click">@color/light_c4_border</color>

  <!-- Dark -->
  <color name="dark_main_background">@color/dark_c1_background</color>
  <color name="dark_panel_background">@color/dark_c2_surface</color>
  <color name="dark_main_foreground">@color/dark_c5_foreground</color>
  <color name="dark_secondary_foreground">@color/dark_c4_border</color>
  <color name="dark_main_border">@color/dark_c4_border</color>

  <color name="dark_task_background">@color/dark_c2_surface</color>
  <color name="dark_task_border">@color/dark_c4_border</color>
  <color name="dark_task_title">@color/dark_c5_foreground</color>

  <color name="dark_popup_background">@color/dark_c2_surface</color>
  <color name="dark_input_background">@color/dark_c2_surface</color>
  <color name="dark_input_border">@color/dark_c4_border</color>

  <color name="dark_button_background">@color/dark_c3_accent</color>
  <color name="dark_button_click">@color/dark_c4_border</color>

  <!-- Semantics -->
  <color name="accent_primary">@color/light_c3_accent</color>
  <color name="accent_secondary">@color/light_c4_border</color>
  
  <color name="drawer_bg">#E6FFFFFF</color> <!-- 90% Opacity Surface -->
</resources>