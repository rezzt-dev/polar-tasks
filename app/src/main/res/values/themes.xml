<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Light theme -->
  <style name="Base.Theme.Polar" parent="Theme.Material3.Light.NoActionBar">
    <!-- 3. Accent -->
    <item name="colorPrimary">@color/light_c3_accent</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorPrimaryContainer">@color/light_c4_border</item>
    <item name="colorOnPrimaryContainer">@color/light_c3_accent</item>
    
    <item name="colorSecondary">@color/light_c3_accent</item>
    <item name="colorOnSecondary">@color/white</item>
    <item name="colorSecondaryContainer">@color/light_c4_border</item> <!-- Gray for Tonal Button -->
    <item name="colorOnSecondaryContainer">@color/light_c5_foreground</item> <!-- Dark Text -->
    <item name="colorError">@color/color_error</item>
    
    <!-- 1. Background -->
    <item name="android:colorBackground">@color/light_c1_background</item>
    <item name="colorOnBackground">@color/light_c5_foreground</item>
    
    <!-- 2. Surface -->
    <item name="colorSurface">@color/light_c2_surface</item>
    <item name="colorOnSurface">@color/light_c5_foreground</item>
    <item name="colorSurfaceVariant">@color/light_c1_background</item> 
    
    <item name="colorSurfaceContainer">@color/light_c2_surface</item>
    <item name="colorSurfaceContainerHigh">@color/light_c4_border</item>
    <item name="colorOutline">@color/light_c4_border</item>
    <item name="colorOutlineVariant">@color/light_c4_border</item>
    
    <!-- STATUS BAR FIX: Matches background -->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar">true</item>
    
    <item name="android:fontFamily">@font/poppins</item>
    <item name="fontFamily">@font/poppins</item>
    
    <item name="taskBackground">@color/light_c2_surface</item>
    <item name="taskBorder">@color/light_c4_border</item>
    <item name="mainBorder">@color/light_c4_border</item>
    <item name="buttonBackground">@color/light_c3_accent</item>
  </style>

  <style name="Theme.Polar" parent="Base.Theme.Polar" />
  
  <!-- Dark theme -->
  <style name="Theme.Polar.Dark" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- 3. Accent -->
    <item name="colorPrimary">@color/dark_c3_accent</item>
    <item name="colorOnPrimary">@color/black</item>
    <item name="colorPrimaryContainer">@color/dark_c4_border</item>
    <item name="colorOnPrimaryContainer">@color/dark_c3_accent</item>
    
    <item name="colorSecondary">@color/dark_c3_accent</item>
    <item name="colorOnSecondary">@color/black</item>
    <item name="colorSecondaryContainer">@color/dark_c4_border</item> <!-- Dark Gray -->
    <item name="colorOnSecondaryContainer">@color/dark_c5_foreground</item> <!-- White Text -->
    <item name="colorError">@color/color_error</item>
    
    <!-- 1. Background -->
    <item name="android:colorBackground">@color/dark_c1_background</item>
    <item name="colorOnBackground">@color/dark_c5_foreground</item>
    
    <!-- 2. Surface -->
    <item name="colorSurface">@color/dark_c2_surface</item>
    <item name="colorOnSurface">@color/dark_c5_foreground</item>
    <item name="colorSurfaceVariant">@color/dark_c1_background</item>
    
    <item name="colorSurfaceContainer">@color/dark_c2_surface</item> 
    <item name="colorSurfaceContainerHigh">@color/dark_c4_border</item>
    <item name="colorOutline">@color/dark_c4_border</item>
    <item name="colorOutlineVariant">@color/dark_c4_border</item>
    
    <!-- STATUS BAR FIX: Matches background -->
    <item name="android:statusBarColor">@color/dark_c1_background</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:navigationBarColor">@color/dark_c1_background</item>
    <item name="android:windowLightNavigationBar">false</item>
    
    <item name="android:fontFamily">@font/poppins</item>
    <item name="fontFamily">@font/poppins</item>
    
    <item name="taskBackground">@color/dark_c2_surface</item>
    <item name="taskBorder">@color/dark_c4_border</item>
    <item name="mainBorder">@color/dark_c4_border</item>
    <item name="buttonBackground">@color/dark_c3_accent</item>

    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:windowLightNavigationBar">false</item>
  </style>
  
  <!-- iOS-style button -->
  <style name="Widget.Polar.Button" parent="Widget.Material3.Button">
    <item name="cornerRadius">12dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:paddingStart">24dp</item>
    <item name="android:paddingEnd">24dp</item>
    <item name="elevation">2dp</item>
  </style>
  
  <style name="Widget.Polar.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
     <item name="cornerRadius">12dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:paddingStart">24dp</item>
    <item name="android:paddingEnd">24dp</item>
    <item name="elevation">1dp</item>
  </style>
  
  <!-- iOS-style card -->
  <style name="Widget.Polar.Card" parent="Widget.Material3.CardView.Elevated">
    <item name="cardCornerRadius">16dp</item>
    <item name="cardElevation">2dp</item>
    <item name="contentPadding">16dp</item>
  </style>
</resources>