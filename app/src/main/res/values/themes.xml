<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Light theme -->
  <style name="Base.Theme.Polar" parent="Theme.Material3.Light.NoActionBar">
    <item name="colorPrimary">@color/accent_primary</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorPrimaryContainer">@color/accent_secondary</item>
    <item name="colorOnPrimaryContainer">@color/light_main_foreground</item>
    
    <item name="colorSecondary">@color/accent_secondary</item>
    <item name="colorOnSecondary">@color/white</item>
    <item name="colorError">@color/color_error</item>
    
    <item name="android:colorBackground">@color/light_main_background</item>
    <item name="colorOnBackground">@color/light_main_foreground</item>
    
    <item name="colorSurface">@color/light_panel_background</item>
    <item name="colorOnSurface">@color/light_main_foreground</item>
    <item name="colorSurfaceVariant">@color/light_main_background</item>
    
    <item name="android:statusBarColor">@color/light_main_background</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:navigationBarColor">@color/light_main_background</item>
    <item name="android:windowLightNavigationBar">true</item>
    
    <!-- Poppins font -->
    <item name="android:fontFamily">@font/poppins</item>
    <item name="fontFamily">@font/poppins</item>
    
    <!-- Custom attributes -->
    <item name="taskBackground">@color/light_task_background</item>
    <item name="taskBorder">@color/light_task_border</item>
    <item name="mainBorder">@color/light_main_border</item>
    <item name="buttonBackground">@color/light_button_background</item>
  </style>

  <style name="Theme.Polar" parent="Base.Theme.Polar" />
  
  <!-- Dark theme -->
  <style name="Theme.Polar.Dark" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="colorPrimary">@color/accent_primary</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorPrimaryContainer">@color/accent_secondary</item>
    <item name="colorOnPrimaryContainer">@color/dark_main_foreground</item>
    
    <item name="colorSecondary">@color/accent_secondary</item>
    <item name="colorOnSecondary">@color/white</item>
    <item name="colorError">@color/color_error</item>
    
    <item name="android:colorBackground">@color/dark_main_background</item>
    <item name="colorOnBackground">@color/dark_main_foreground</item>
    
    <item name="colorSurface">@color/dark_panel_background</item>
    <item name="colorOnSurface">@color/dark_main_foreground</item>
    <item name="colorSurfaceVariant">@color/dark_main_background</item>
    
    <item name="android:statusBarColor">@color/dark_main_background</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:navigationBarColor">@color/dark_main_background</item>
    <item name="android:windowLightNavigationBar">false</item>
    
    <!-- Poppins font -->
    <item name="android:fontFamily">@font/poppins</item>
    <item name="fontFamily">@font/poppins</item>
    
    <!-- Custom attributes -->
    <item name="taskBackground">@color/dark_task_background</item>
    <item name="taskBorder">@color/dark_task_border</item>
    <item name="mainBorder">@color/dark_main_border</item>
    <item name="buttonBackground">@color/dark_button_background</item>
  </style>
  
  <!-- iOS-style button -->
  <style name="Widget.Polar.Button" parent="Widget.Material3.Button">
    <item name="cornerRadius">@dimen/button_corner_radius</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:minHeight">@dimen/button_height</item>
    <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
    <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
    <item name="elevation">2dp</item>
  </style>
  
  <style name="Widget.Polar.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
    <item name="cornerRadius">@dimen/button_corner_radius</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:minHeight">@dimen/button_height</item>
    <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
    <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
    <item name="elevation">1dp</item>
  </style>
  
  <!-- iOS-style card -->
  <style name="Widget.Polar.Card" parent="Widget.Material3.CardView.Elevated">
    <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    <item name="cardElevation">@dimen/card_elevation</item>
    <item name="contentPadding">@dimen/card_padding</item>
  </style>
</resources>